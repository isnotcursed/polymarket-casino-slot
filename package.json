{
  "name": "polymarket-slot-meme",
  "version": "1.0.0",
  "description": "Meme slot using Polymarket API for predictions",
  "license": "SEE LICENSE IN LICENSE.md",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_TLS_REJECT_UNAUTHORIZED=0 bun --hot src/index.ts",
    "api": "NODE_TLS_REJECT_UNAUTHORIZED=0 bun --hot src/api-server.ts",
    "build": "bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun src/index.ts"
  },
  "dependencies": {
    "@polymarket/clob-client": "^5.2.1",
    "motion": "^12.34.0",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.45.0",
    "sass": "^1.97.3",
    "typescript": "^5.0.2",
    "vite": "^5.0.0"
  }
}
